{% endblock %}
{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.Name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">Show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin') }}">Create new</a>
{% endblock %}
