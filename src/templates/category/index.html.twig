{% extends 'base.html.twig' %}
{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.Name }}</td>
                <td>
                    <a class="btn btn-dark my-2 mx-2"
                       href="{{ path('app_category_edit', {'id': category.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-dark my-2 mx-2" href="{{ path('admin') }}">back to list</a>
{% endblock %}
